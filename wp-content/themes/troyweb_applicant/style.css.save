/* Google Font Imports */
@import url('https://fonts.googleapis.com/css2?family=Lato:wght@700&family=Oldenburg&family=Oregano&display=swap');

/* Color Definitions */
:root {
    --brand-orange: #E77436;
    --brand-dark: #29292E;
    --grey: #474852;
    --highlight: #F7CEB8;
    --neutral: #EFEFEF;
}

/* H1 Heading */
h1 {
    font-family: 'Lato', sans-serif;
    font-size: 48px;
    font-weight: 700;
    letter-spacing: -1px;
    color: var(--brand-dark);
}

/* Button Styles */
.button {
    font-family: 'Lato', sans-serif;
    font-size: 48px;
    font-weight: 700;
    letter-spacing: -1px;
    color: white;
    background-color: var(--brand-orange);
    border: none;
    padding: 10px 20px;
    cursor: pointer;
}

.button:hover {
    color: var(--brand-orange);
    background-color: white;
    border: 3px solid var(--brand-orange);
}

/* Navigation Heading */
.nav-heading {
    font-family: 'Lato', sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: white;
    background-color: var(--brand-orange);
    padding: 10px;
    border: 16px solid var(--brand-orange);
    background: linear-gradient(var(--brand-dark), var(--grey));
}

.nav-heading:hover {
    color: var(--brand-orange);
    border-color: var(--brand-orange);
}

/* H2 Heading */
h2 {
    font-family: 'Lato', sans-serif;
    font-size: 36px;
    font-weight: 700;
    letter-spacing: -1px;
    color: var(--brand-dark);
}

/* H3 Heading */
h3 {
    font-family: 'Lato', sans-serif;
    font-size: 32px;
    font-weight: 700;
    font-style: italic;
    letter-spacing: 1.5px;
    color: white;
}

/* Large Body Copy */
.large-body-copy {
    font-family: 'Oldenburg', serif;
    font-size: 22px;
    color: var(--brand-dark);
}

/* Social Icon */
.social-icon {
    font-family: 'Oregano', cursive;
    font-size: 34px;
    color: var(--grey);
}

.social-icon i {
    font-size: 34px;
    color: var(--grey);
}

/* Normal Body Copy */
body {
    font-family: 'Oldenburg', serif;
    font-size: 22px;
    color: var(--brand-dark);
    background-color: var(--neutral);
}

/* Highlighted Text */
.highlight {
    background-color: var(--highlight);
    padding: 5px;
}

/*Main navigation background image   */

.main-navigation {
    background-image: url('<?php echo get_template_directory_uri(); ?>/assets/images/tw-logo-header.png)';
    background-size: cover; /* Adjusts the size of the image to cover the entire element */
    background-repeat: no-repeat; /* Prevents the image from repeating */
    background-position: center; /* Centers the background image */
    padding: 20px; /* Optional: Add padding for spacing */
}

.main-body{background-color:'orange';
font-size:60px;


}

.hero-section {
    background-image: url('<?php echo get_template_directory_uri(); ?>/assets/images/hero-background.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
}

.hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Overlay for better text contrast */
    z-index: 0;
}

.hero-content {
    z-index: 1;
    padding: 20px;
}





